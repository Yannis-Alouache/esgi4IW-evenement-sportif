{% extends 'base.html.twig' %}

{% block title %}Liste des événements{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold text-gray-800 mb-8">Liste des événements</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% if events is empty %}
                <p class="text-gray-600">Aucun événement n'est disponible pour le moment.</p>
            {% else %}
                {% for event in events %}
                    <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
                        <h2 class="text-xl font-semibold mb-3">
                            <a href="{{ path('app_event_view', {'id': event.id}) }}" class="text-blue-600 hover:text-blue-800">
                                {{ event.name }}
                            </a>
                        </h2>
                        <div class="text-gray-600">
                            <p class="mb-2">Date : {{ event.date|date('d/m/Y H:i') }}</p>
                            <p class="mb-2">Lieu : {{ event.location }}</p>
                            <p>Participants : {{ event.participants|length }}</p>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
{% endblock %} 